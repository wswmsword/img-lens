    "lens",
    "ui-component",
    "react",
    "react-component"
  ],
  "author": "wswmsword",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/wswmsword/img-lens/issues"
  },
  "homepage": "https://github.com/wswmsword/img-lens#readme",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@babel/preset-react": "^7.26.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.3",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@types/node": "^22.13.14",
    "npm-watch": "^0.13.0",
