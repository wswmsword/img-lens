{
  "name": "img-lens",
  "version": "1.0.0",
  "description": "A React lens component to zoom into images.",
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "scripts": {
    "watch": "npm-watch",
    "build": "rollup -c --bundleConfigAsCjs",
